; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = true

[*.sh]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.tmpl]
indent_style = tab
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[Makefile]
indent_style = tab

